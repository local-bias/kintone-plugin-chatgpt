{
  "name": "kintone-plugin-chatgpt",
  "version": "1.0.0",
  "author": "ribbit",
  "license": "MIT",
  "scripts": {
    "init": "plugin init && plugin genkey",
    "build": "concurrently \"npm:build:*\" && plugin zip",
    "build:js": "plugin build",
    "build:css": "tailwindcss -i ./src/styles/global.css -o ./.plugin/contents/config.css -c ./tailwind.config.config.mjs --minify && tailwindcss -i ./src/styles/global.css -o ./.plugin/contents/desktop.css -c ./tailwind.config.desktop.mjs --minify",
    "standalone": "concurrently \"npm:build:*\" && plugin zip --env standalone",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:plugin": "plugin dev",
    "dev:css-config": "tailwindcss -i ./src/styles/global.css -o ./.plugin/dev/config.css -c ./tailwind.config.config.mjs -w",
    "dev:css-desktop": "tailwindcss -i ./src/styles/global.css -o ./.plugin/dev/desktop.css -c ./tailwind.config.desktop.mjs -w",
    "lint": "eslint ./src --cache --ext .js,.ts,.tsx"
  },
  "browser": {
    "path": false
  },
  "dependencies": {
    "@emotion/css": "11",
    "@emotion/react": "11",
    "@emotion/styled": "11",
    "@heroicons/react": "2",
    "@konomi-app/kintone-utilities": "*",
    "@konomi-app/kintone-utilities-react": "*",
    "@konomi-app/ui": "*",
    "@konomi-app/ui-react": "*",
    "@mui/icons-material": "5",
    "@mui/material": "5",
    "immer": "10",
    "luxon": "3",
    "marked": "12",
    "nanoid": "5",
    "notistack": "3",
    "openai": "^4",
    "react": "18",
    "react-dom": "18",
    "react-error-boundary": "4",
    "recoil": "0.7"
  },
  "devDependencies": {
    "@kintone/dts-gen": "8",
    "@kintone/plugin-packer": "8",
    "@kintone/plugin-uploader": "9",
    "@konomi-app/k2": "*",
    "@konomi-app/kbuild": "*",
    "@types/luxon": "3",
    "@types/marked": "^5",
    "@types/react": "18",
    "@types/react-dom": "18",
    "@types/uuid": "^9",
    "@typescript-eslint/eslint-plugin": "7",
    "@typescript-eslint/parser": "7",
    "concurrently": "^8",
    "dotenv": "16",
    "eslint": "8",
    "html-minifier": "^4",
    "tailwindcss": "^3",
    "ts-loader": "^9",
    "typescript": "5"
  },
  "prettier": {
    "printWidth": 100,
    "arrowParens": "always",
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "endOfLine": "lf"
  }
}